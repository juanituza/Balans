<div class="m-5">
    <h3>{{curso.nombre}}</h3>

    <table id="miTabla" class="display " style="width:100% ">
        <thead>
            <tr>
                <th>Nombre y apellido</th>
                <th>Email</th>
                <th>Teléfono</th>
                <th>Role</th>
                <th>Curso</th>
                <th>Select new Role</th>

                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            {{#each Usuarios}}
            <tr>
                <td>{{this.nombre}} {{this.apellido}}</td>
                <td>{{this.email}}</td>
                <td>{{this.telefono}}</td>
                <td>{{this.role}}</td>
                <td>{{this.curso}}</td>
                <td>
                    <!-- Agregar un formulario para cada usuario -->
                    <form class="col-lg-12 rolForm">
                        <div class="form-outline mb-4">
                            <select class="col-lg-12 form-select center my-2 roleSelect">
                                <option value="premium" class="col-lg-12 center">
                                    Alumno
                                </option>
                                <option value="user">Profesor</option>
                            </select>
                        </div>
                    </form>
                </td>

                <td>
                    {{! <a href=""> }}
                        {{! </a> }}
                    <button class="col-lg-12 btn btn-danger center my-2 deleteUser" id="{{this._id}}">
                        <i class="fa fa-trash"></i> Delete
                    </button>
                </td>

            </tr>
            {{/each}}

        </tbody>
        <tfoot>
        </tfoot>
    </table>

    {{!-- <div class="col-12" id="editor">
        <p name="pilates" cols="150" rows="10">
            {{curso.texto}}
        </p>
    </div> --}}
    <div class="col-12">

        <textarea id="editor" name="pilates" cols="150" rows="10">{{curso.texto}}</textarea>
    </div>
    <button type="button" class="col-lg-3 btn btn-primary center my-2 changeRol" id="modifyButton"
        data-curso-id="{{curso._id}}">
        <i class="fa-regular fa-circle-up"></i> Modificar
    </button>
</div>

