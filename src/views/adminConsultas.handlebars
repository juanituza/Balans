

<div class="m-5">
<h3>Consultas:</h3>

    <table id="miTabla" class="display " style="width:100% ">
        <thead>
            <tr>
                <th >Nombre y apellido</th>
                <th>Email</th>
                <th>Teléfono</th>
                <th>Curso</th>
                <th>Mensaje</th>
                <th>Estado</th>
                <th>Modificar estado</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            {{#each consulta}}
            <tr>
                <td class="no-wrap">{{this.nombre}} {{this.apellido}}</td>
                <td>{{this.email}}</td>
                <td>{{this.telefono}}</td>
                <td>{{this.curso}}</td>
                <td >{{this.mensaje}}</td>
                <td>
                    <!-- Agregar un formulario para cada usuario -->
                    <form class="col-lg-12 rolForm">
                        <div class="form-outline mb-4">
                            <select class="col-lg-12 form-select center my-2 roleSelect">
                                <option value="premium" class="col-lg-12 center">
                                    No leido
                                </option>
                                <option value="user">Pendiente</option>
                                <option value="user">Cerrado</option>
                            </select>
                        </div>
                    </form>
                </td>
                <td>
                    <!-- Agregar el botón de actualización dentro del formulario -->
                    <button type="submit" class="col-lg-12 btn btn-info center my-2 changeRol"
                        data-user-id="{{this._id}}">
                        <i class="fa-regular fa-circle-up"></i> Modificar
                    </button>
                </td>
                <td>
                    {{! <a href=""> }}
                        {{! </a> }}
                    <button class="col-lg-12 btn btn-danger center my-2 deleteUser" id="{{this._id}}">
                        <i class="fa fa-trash"></i> Delete
                    </button>
                </td>

            </tr>
            {{/each}}

        </tbody>
        <tfoot>
        </tfoot>
    </table>
</div>



