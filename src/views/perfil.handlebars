<div class="container-xxl py-5" id="contact">
    <div class="container py-5 px-lg-5">

        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h5 class="text-primary-gradient fw-medium m-3 p-3">Perfil</h5>

            {{!-- <img class="foto-de-perfil" src="/imagenes/testimonial-3.jpg" alt="Mi Foto de Perfil"> --}}

        </div>
        <div class="row justify-content-center m-3">
            <div class="col-lg-9">
                <div class="wow fadeInUp" data-wow-delay="0.3s">

                    <form id="imagenForm" enctype="multipart/form-data">

                        {{#unless imagen}}
                        <div class="form-outline  col-12 text-center mb-4">
                            <div class="image-upload">
                                <label for="fileInput" class="image-label">
                                    <img class="foto-de-perfil" id="imagePreview" src="{{imagen}}"
                                        alt="Mi Foto de Perfil">
                                    <i class="fa-solid fa-user updateImage" id="iconPreview"></i>

                                </label>
                                <input type="file" id="fileInput" name="imagen" class="file-input" multiple
                                    onchange="previewImage();" />
                            </div>
                        </div>
                        {{/unless}}
                        {{#if imagen}}

                        <div class="form-outline  col-12 text-center mb-4">
                            <div class="image-upload">
                                <label for="fileInput" class="image-label">
                                    <img class="foto-de-perfil" id="NuevaImagen" src="{{imagen}}"
                                        alt="Mi Foto de Perfil">
                                    {{!-- <i class="fa-solid fa-user updateImage" id="iconPreview"></i> --}}

                                </label>
                                <input type="file" id="fileInput" name="imagen" class="file-input" multiple
                                    onchange="previewImage();" />

                            </div>
                        </div>
                        {{/if}}
                        <div class="col-12 text-center">
                            <button type="submit" class="btn btn-grad rounded-pill  ">
                                Cambiar imagen
                            </button>
                        </div>

                    </form>
