<div class="m-5">
    <h3>Usuarios:</h3>

    <table id="miTabla" class="display " style="width:100% ">
        <thead>
            <tr>
                <th>Nombre y apellido</th>
                <th>Email</th>
                <th>Tel√©fono</th>
                <th>Role</th>
                <th>Curso</th>
                <th>Modificar</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            {{#each Usuarios}}
            <tr>
                <td>{{this.nombre}} {{this.apellido}}</td>
                <td>{{this.email}}</td>
                <td>{{this.telefono}}</td>
                <td>{{this.role}}</td>
                <td>{{this.curso}}</td>
                <td>
                    <a href="/admin/alumnos/{{this._id}}">
                        <button type="submit" class="col-lg-12 btn btn-outline-primary center my-2 changeEstado"
                            data-consulta-id="{{this._id}}">
                            <i class="fa-regular fa-circle-up"></i> Modificar
                        </button>
                    </a>
                </td>
                <td>
                    {{! <a href=""> }}
                        {{! </a> }}
                    <button type="submit" class="col-lg-12 btn btn-danger center my-2 deleteUser" id="{{this._id}}">
                        <i class="fa fa-trash"></i> Eliminar
                    </button>
                </td>

            </tr>
            {{/each}}

        </tbody>
        <tfoot>
        </tfoot>
    </table>
</div>

<script src="/js/dataTable.js"></script>
<script src="/js/eliminarUsuario.js"></script>

