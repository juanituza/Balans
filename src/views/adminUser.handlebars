<div class="m-5" id="page">

    <h3>Usuarios:</h3>
<button class="menu-toggle-btn flecha my-5">
    <i class="fa-solid fa-circle-chevron-down rotate-arrow iconoFlecha"></i>
</button>



    <div class="d-block">
        <table id="miTabla" class="table table-striped " style="width:100%">
            <thead>
                <tr >
                    <th class="centered">Nombre y apellido</th>
                    <th class="centered">Email</th>
                    <th class="centered">Tel√©fono</th>
                    <th class="centered">Role</th>
                    <th class="centered">Curso</th>
                    <th class="centered">Modificar</th>
                    <th class="centered">Delete</th>
                </tr>
            </thead>
            <tbody>
                {{#each Usuarios}}
                <tr>
                    <td >{{this.nombre}} {{this.apellido}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.telefono}}</td>
                    <td>{{this.role}}</td>
                    <td>{{#each this.cursos}}
                    <ul>
                        <li>{{this.nombre}}</li>
                    </ul>
                    {{/each}}
                                       
                    </td> 
                    <td>
                        <a href="/admin/alumnos/{{this._id}}">
                            <button type="submit" class="col-lg-12 btn btn-primary center my-2 changeEstado"
                                data-consulta-id="{{this._id}}">
                                <i class="fa-regular fa-circle-up"></i> Modificar
                            </button>
                        </a>
                    </td>
                    <td>
                        {{! <a href=""> }}
                            {{! </a> }}
                        <button type="submit" class="col-lg-12 btn btn-danger center my-2 deleteUser" id="{{this._id}}">
                            <i class="fa fa-trash"></i> Eliminar
                        </button>
                    </td>

                </tr>
                {{/each}}

            </tbody>
            <tfoot>
            </tfoot>
        </table>
    </div>


<script src="/js/dataTableUser.js"></script>
<script src="/js/eliminarUsuario.js"></script>

