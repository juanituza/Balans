<!-- Contact Start -->
<div class="text-center wow fadeInUp" data-wow-delay="0.1s">
    <h2 class="text-primary-gradient fw-medium mb-3">Contacta con nosotros</h2>
    
</div>
<div class="row justify-content-center">
    <div class="col-lg-9">
        <div class="wow fadeInUp" data-wow-delay="0.3s">
            <h6 class="text-center mb-4">¡Estamos encantados de saber de ti!</h6>
            <p class="text-center mb-4">
                Por favor, completa el siguiente formulario y estaremos en contacto contigo lo antes
                posible.</p>
            <form id="consultaForm">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="text" class="form-control" name="nombre" id="name" placeholder="nombre">
                            <label for="name">Nombre</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="apellido" name="apellido"
                                placeholder="apellido">
                            <label for="Apellido">Apellido</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="telefono" name="telefono"
                                placeholder="Teléfono">
                            <label for="Telefono">Teléfono</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input type="email" class="form-control" id="email" name="email" placeholder="Your Email">
                            <label for="email">Email</label>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating">
                            <select class="form-control " id="select-form" name="curso">
                                <option value="pilates">Pilates</option>
                                <option value="quiromasaje">Quiromasaje</option>
                                <option value="nutricion">Nutrición y gimnasia</option>
                            </select>
                            <label for="cursos">Selecciona un curso:</label>

                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-floating">
                            <textarea class="form-control" name="mensaje" placeholder="Leave a message here"
                                id="message" style="height: 150px"></textarea>
                            <label for="message">Mensage</label>
                        </div>
                    </div>
                    <div class="col-12 text-center">
                        <button class="btn btn-grad rounded-pill py-3 px-5" type="submit">Enviar mensaje</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Contact End -->

<script src="/js/consulta.js"></script>