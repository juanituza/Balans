<!-- Section: Design Block -->
<section class="text-center text-lg-start">
    <!-- Jumbotron -->
    <div class="container py-4">
        <div class="row g-0 align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <div class="card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.55);
            backdrop-filter: blur(30px);
            ">
                    <div class="card-body p-5 shadow-5 text-center">
                        <h2 class="fw-bold mb-5">Registro</h2>
                        <form id="registroForm" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input type="text" id="form3Example1" name="nombre" class="form-control" />

                                        <label class="form-label" for="nombre"><i
                                                class="fa-solid fa-id-card-clip me-3"></i></i>Nombre</label>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input type="text" id="form3Example2" name="apellido" class="form-control" />
                                        <label class="form-label" for="apellido"><i
                                                class="fa-solid fa-signature me-3"></i>Apellido</label>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input type="text" id="form3Example2" name="dni" class="form-control" />
                                        <label class="form-label" for="dni"><i class="fa-solid fa-id-card"></i>
                                            dni</label>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <select name="pais" class="form-control custom-select" id="countrySelect">
                                        <!-- Opciones de países se cargarán aquí -->
                                    </select>
                                    <label for="countrySelect"> <i class="fa-solid fa-earth-americas"></i> Seleccionar
                                        el
                                        país</label>
                                </div>

                                <div class="col-md-6 mb-4">

                                    <select name="provincia" class="form-control custom-select"
                                        id="item-details-stateValue">

                                    </select>
                                    <label for="stateSelect"><i class="fa-solid fa-location-dot"></i> Seleccionar la
                                        provincia</label>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input type="text" id="form3Example2" name="domicilio" class="form-control" />
                                        <label class="form-label" for="domicilio"><i class="fa-solid fa-house"></i>
                                            Domicilio</label>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input type="text" id="form3Example2" name="cp" class="form-control" />
                                        <label class="form-label" for="cp"><i class="fa-solid fa-house"></i>
                                            Código postal</label>
                                    </div>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input type="date" id="nacimiento" class="form-control hidden-input"
                                            name="nacimiento" value="2023-11-04" />
                                        <label class="form-label" for="nacimiento"><i
                                                class="fa-solid fa-calendar-days me-3"></i>Fecha de nacimiento</label>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input type="Number" id="form3Example2" name="telefono" class="form-control" />
                                        <label class="form-label" for="telefono"><i
                                                class="fa-solid fa-mobile-screen-button me-3"></i> Teléfono</label>
                                    </div>
                                </div>
                                <!-- Email input -->
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input type="email" id="form3Example3" name="email" class="form-control" />
                                        <label class="form-label" for="form3Example3"> <i
                                                class="fa fa-envelope me-3"></i>Email
                                            address</label>
                                    </div>
                                </div>
                                <div class="col-md-12 mb-4">

                                    <select name="curso" class="form-control custom-select">
                                        <option value="pilates">Pilates</option>
                                        <option value="quiromasaje">Quiromasaje</option>
                                        <option value="nutricion">Nutrición y gimnasia</option>
                                    </select>
                                    <label for="curso"><i class="fa-solid fa-arrow-pointer"></i> Seleccionar un
                                        curso</label>
                                </div>
                                <!-- Password input -->
                                <div class=" col-md-12 mb-4">
                                    <input type="password" id="form3Example4" name="password" class="form-control" />
                                    <label class="form-label" for="password"><i
                                            class="fa-solid fa-lock me-3"></i>Password</label>
                                </div>
                                <!-- Submit button -->
                                <div class="col-12 ">
                                    <button class="btn btn-grad rounded-pill py-3 px-5" type="submit">Enviar</button>
                                </div>
                            </div>
                            {{!-- <p class="small fw-bold mt-2 pt-1 mb-0">¿Ya tienes cuenta?
                                <a href="/login" class="link-danger">¡Logueate!</a>
                            </p> --}}
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 mb-5 mb-lg-0">
                <img src="imagenes/pilates1.jpg" class="w-100 rounded-4 shadow-4" alt="" />
            </div>
        </div>
    </div>
    <!-- Jumbotron -->
</section>
