<!-- Section: Design Block -->
<section class="text-center text-lg-start">
    <!-- Jumbotron -->
    <div class="container py-4">
        <div class="row g-0 align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <div class="card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.55);
            backdrop-filter: blur(30px);
            ">
                    <div class="card-body p-5 shadow-5 text-center">
                        <h2 class="fw-bold mb-5">Registro</h2>
                        <form id="registroForm">
                            <!-- 2 column grid layout with text inputs for the first and last names -->
                            {{!-- <img class="foto-de-perfil" src="#" alt="Mi Foto de Perfil"> --}}
                        <div class="form-outline mb-4">
                            <div class="image-upload">
                                <label for="fileInput" class="image-label">
                                    <i class="fa-solid fa-user updateImage" id="iconPreview"></i>
                                    <img class="foto-de-perfil" id="imagePreview" src="#" alt="Mi Foto de Perfil" style="display: none;">
                                </label>
                                <input type="file" id="fileInput" name="imagen" class="file-input" multiple onchange="previewImage();" />
                            </div>
                        </div>


                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input type="text" id="form3Example1" name="nombre" class="form-control" />
                                        
                                        <label class="form-label" for="nombre"><i class="fa-solid fa-id-card-clip me-3"></i></i>Nombre</label>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input type="text" id="form3Example2" name="apellido" class="form-control" />
                                        <label class="form-label" for="apellido"><i class="fa-solid fa-signature me-3"></i>Apellido</label>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input type="date" id="nacimiento" class="form-control hidden-input" name="nacimiento" value="2023-11-04"/>
                                        <label class="form-label" for="nacimiento"><i class="fa-solid fa-calendar-days me-3"></i>Fecha de nacimiento</label>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input type="Number" id="form3Example2" name="telefono" class="form-control" />
                                        <label class="form-label" for="telefono"><i class="fa-solid fa-mobile-screen-button me-3"></i>Teléfono</label>
                                    </div>
                                </div>
                            </div>

                            <!-- Email input -->
                            <div class="form-outline mb-4">
                                <input type="email" id="form3Example3" name="email" class="form-control" />
                                <label class="form-label" for="form3Example3"> <i class="fa fa-envelope me-3"></i>Email address</label>
                            </div>

                            <!-- Password input -->
                            <div class="form-outline mb-4">
                                <input type="password" id="form3Example4"   name="password" class="form-control" />
                                <label class="form-label" for="password"><i class="fa-solid fa-lock me-3"></i>Password</label>
                            </div>
                            <!-- Submit button -->
                            <button type="submit" class="btn btn-primary-gradient py-sm-3 px-4 px-sm-5 rounded-pill mt-3 mb-4">
                                Enviar
                            </button>
                            <p class="small fw-bold mt-2 pt-1 mb-0">¿Ya tienes cuenta?
                                <a href="/login" class="link-danger">¡Logueate!</a>
                            </p>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 mb-5 mb-lg-0">
                <img src="imagenes/pilates1.jpg" class="w-100 rounded-4 shadow-4"
                    alt="" />
            </div>
        </div>
    </div>
    <!-- Jumbotron -->
</section>
<!-- scripts -->
<script src="js/date.js"></script>
<script src="/js/registro.js"></script>
<script src="/js/imagePreview.js"></script>

